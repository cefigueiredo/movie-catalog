<p id="notice"><%= notice %></p>

<h1>Listing Movies</h1>

<%= form_tag(movies_path, method: :get) do %>
  <%= text_field_tag :q, @search_text,
        placeholder: "Search by title" %>

  <%= submit_tag "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Storyline</th>
      <th>Release date</th>
      <th>Genres</th>
      <th>Imdb link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.storyline %></td>
        <td><%= movie.release_date %></td>
        <td><%= movie.genre_list %></td>
        <td><%= movie.imdb_link %></td>
        <td><%= link_to 'Show', movie_path(movie.id) %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie_path(movie.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%= paginate @movies %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path %>
